.al_header {
    top: 0;
    width: 100%;
    height: 80px;
    z-index: 20;
}

.al_svg_symbol {
    display: none;
}

.al_header_site_title {
    font-size: 1.5em;
    font-weight: bold;
}

.al_header_container {
    height: 100%;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
}

.al_header_container a {
    color: white;
    padding: 0 15px;
}

@media screen and (max-width: 500px){

.al_header_nav_bar {
    display: none;
    }
}

@media screen and (min-width: 501px) {
    .al_header_nav_bar {
    display: flex;
    }
}


.al_header_setting {
    width: 46px;
    height: 38px;
    padding: 10px 16px;
    margin-left: 10px;

    &:hover {
        transition: all 0.3s ease-out;
        background-color: rgba(255, 255, 255, 0.1);
        cursor pointer;
    }
}

.al_header_menu {
    text-align: center;
    height: 40px;
    margin-right: 3px;

    &:hover {
        transition: all 0.3s ease-out;
        background-color: rgba(255, 255, 255, 0.1);
    }
}

.al_header_menu_item {
    display: block;
    font-size: 13px;
    line-height: 40px;
    height: 40px;
    width: 100%;
}


.al_header_icon {
    width: 14px;
    height: 14px;
    fill: white;
    pointer-events: none;
}